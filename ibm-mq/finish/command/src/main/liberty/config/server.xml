<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<server description="command">

    <featureManager>
        <feature>restfulWS-3.1</feature>
        <feature>cdi-4.0</feature>
        <feature>jsonb-3.0</feature>
        <feature>jsonp-2.1</feature>
        <feature>persistence-3.1</feature>
        <feature>messaging-3.1</feature>
        <feature>messagingClient-3.0</feature>
        <feature>enterpriseBeansLite-4.0</feature>
        <feature>mdb-4.0</feature>
    </featureManager>

    <variable name="postgres.hostname" defaultValue="localhost" />
    <variable name="postgres.portnum"  defaultValue="5432" />

    <httpEndpoint id="defaultHttpEndpoint" httpPort="9081" httpsPort="9444"/>

    <application location="guide-jms-cqrs-command.war"/>

    <library id="postgresql-library">
        <fileset dir="${shared.resource.dir}/" includes="*.jar"/>
    </library>

    <dataSource id="DefaultDataSource" jndiName="jdbc/postgresql">
        <jdbcDriver libraryRef="postgresql-library"/>
        <properties.postgresql databaseName="admin"
                               serverName="${postgres.hostname}"
                               portNumber="${postgres.portnum}"
                               user="admin"
                               password="adminpwd"/>
    </dataSource>

    <resourceAdapter id="wmqjmsra" location="https://repo.maven.apache.org/maven2/com/ibm/mq/wmq.jakarta.jmsra/9.3.5.0/wmq.jakarta.jmsra-9.3.5.0.rar" />
    
    <!-- Listen message from Command Queue -->
    <jmsQueue id="CommandQueue" jndiName="jms/CommandQueue">
        <properties.wmqjmsra baseQueueName="${ibmmq-command-queue-name}"/>
    </jmsQueue>

    <jmsActivationSpec id="guide-jms-cqrs-command/CommandQueueListener">
        <properties.wmqjmsra
            hostName="${ibmmq-hostname}" 
            port="${ibmmq-port}"
            channel="${ibmmq-channel}"
            queueManager="${ibmmq-queue-manager}"
            userName="${ibmmq-username}"
            password="${ibmmq-password}"
            transportType="CLIENT"
            destinationRef="CommandQueue"
            destinationType="jakarta.jms.Queue"
            />
    </jmsActivationSpec>

    <!-- Send message to Refresh Queue -->
    <connectionManager id="RefreshCM" maxPoolSize="400" minPoolSize="1"/>

    <jmsQueueConnectionFactory 
        connectionManagerRef="RefreshCM"
        jndiName="RefreshQueueConnectionFactory">
        <properties.wmqjmsra
            hostName="${ibmmq-hostname}" 
            port="${ibmmq-port}"
            channel="${ibmmq-channel}"
            queueManager="${ibmmq-queue-manager}"
            userName="${ibmmq-username}"
            password="${ibmmq-password}"
            transportType="CLIENT" />
    </jmsQueueConnectionFactory>

    <jmsQueue id="RefreshQueue" jndiName="jms/RefreshQueue">
        <properties.wmqjmsra baseQueueName="${ibmmq-refresh-queue-name}"/>
    </jmsQueue>

    <logging consoleLogLevel="INFO"/>
</server>
