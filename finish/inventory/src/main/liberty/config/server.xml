<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<server description="inventory">

    <featureManager>
        <feature>restfulWS-3.0</feature>
        <feature>cdi-3.0</feature>
        <feature>jsonb-2.0</feature>
        <feature>jsonp-2.0</feature>
        <feature>messaging-3.0</feature>
        <feature>messagingClient-3.0</feature>
        <feature>messagingServer-3.0</feature>
        <feature>enterpriseBeansLite-4.0</feature>
        <feature>mdb-4.0</feature>
    </featureManager>

    <variable name="command.jms.address" defaultValue="localhost:7276"/>

    <httpEndpoint id="defaultHttpEndpoint" httpPort="9080" httpsPort="9443"/>

    <webApplication contextRoot="/" location="guide-jms-cqrs-inventory.war"/>

    <!-- Command queue -->
    <connectionManager id="CommandCM" maxPoolSize="400" minPoolSize="1"/>

    <jmsQueueConnectionFactory
        connectionManagerRef="CommandCM"
        jndiName="CommandQueueConnectionFactory">
        <properties.wasJms
            remoteServerAddress="${command.jms.address}:BootstrapBasicMessaging" />
    </jmsQueueConnectionFactory>

    <jmsQueue id="CommandQueue" jndiName="jms/CommandQueue">
        <properties.wasJms queueName="CommandQueue"/>
    </jmsQueue>
    
    <!-- Cache queue -->
    <wasJmsEndpoint id="InboundJmsCommsEndpoint"
                    host="*"
                    wasJmsPort="7278"
                    wasJmsSSLPort="9102"/>

    <connectionManager id="CacheCM" maxPoolSize="400" minPoolSize="1"/>

    <messagingEngine id="CacheME">
        <queue id="CacheQueue"
               forceReliability="ReliablePersistent"
               maxQueueDepth="5000"/>
    </messagingEngine>

    <jmsQueueConnectionFactory connectionManagerRef="CacheCM"
                               jndiName="CacheQueueConnectionFactory">
        <properties.wasJms/>
    </jmsQueueConnectionFactory>

    <jmsQueue id="CacheQueue" jndiName="jms/CacheQueue">
        <properties.wasJms queueName="CacheQueue"/>
    </jmsQueue>

    <jmsActivationSpec id="guide-jms-cqrs-inventory/CacheListener">
        <properties.wasJms
            destinationRef="CacheQueue"
            destinationType="jakarta.jms.Queue"
            maxConcurrency="200"/>
    </jmsActivationSpec>

    <logging consoleLogLevel="INFO"/>

</server>