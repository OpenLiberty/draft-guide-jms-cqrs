<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<server description="query">

    <featureManager>
        <feature>restfulWS-3.1</feature>
        <feature>cdi-4.0</feature>
        <feature>jsonb-3.0</feature>
        <feature>jsonp-2.1</feature>
        <feature>persistence-3.1</feature>
        <feature>messaging-3.1</feature>
        <feature>messagingClient-3.0</feature>
        <feature>messagingServer-3.0</feature>
        <feature>enterpriseBeansLite-4.0</feature>
        <feature>mdb-4.0</feature>
    </featureManager>

    <variable name="postgres.hostname" defaultValue="localhost"/>
    <variable name="postgres.portnum"  defaultValue="5432"/>
    <variable name="cache.jms.address" defaultValue="localhost:7278"/>

    <httpEndpoint id="defaultHttpEndpoint" httpPort="9082" httpsPort="9445"/>

    <application location="guide-jms-cqrs-query.war"/>

    <library id="postgresql-library">
        <fileset dir="${shared.resource.dir}/" includes="*.jar"/>
    </library>

    <dataSource id="DefaultDataSource" jndiName="jdbc/postgresql">
        <jdbcDriver libraryRef="postgresql-library" />
        <properties.postgresql databaseName="admin"
                               serverName="${postgres.hostname}"
                               portNumber="${postgres.portnum}"
                               user="admin"
                               password="adminpwd"/>
    </dataSource>

    <!-- Query queue -->
    <wasJmsEndpoint id="InboundJmsCommsEndpoint"
                    host="*"
                    wasJmsPort="7277"
                    wasJmsSSLPort="9101"/>

    <connectionManager id="QueryCM" maxPoolSize="400" minPoolSize="1"/>

    <messagingEngine id="QueryME">
        <queue id="QueryQueue"
               forceReliability="ReliablePersistent"
               maxQueueDepth="5000"/>
    </messagingEngine>

    <jmsQueueConnectionFactory connectionManagerRef="QueryCM"
                               jndiName="QueryQueueConnectionFactory">
        <properties.wasJms/>
    </jmsQueueConnectionFactory>

    <jmsQueue id="QueryQueue" jndiName="jms/QueryQueue">
        <properties.wasJms queueName="QueryQueue"/>
    </jmsQueue>

    <jmsActivationSpec id="guide-jms-cqrs-query/QueryListener">
        <properties.wasJms
            destinationRef="QueryQueue"
            destinationType="jakarta.jms.Queue"
            maxConcurrency="200"/>
    </jmsActivationSpec>

    <!-- Cache queue -->
    <connectionManager id="CacheCM" maxPoolSize="400" minPoolSize="1"/>

    <jmsQueueConnectionFactory
        connectionManagerRef="CacheCM"
        jndiName="CacheQueueConnectionFactory">
        <properties.wasJms
            remoteServerAddress="${cache.jms.address}:BootstrapBasicMessaging"/>
    </jmsQueueConnectionFactory>

    <jmsQueue id="CacheQueue" jndiName="jms/CacheQueue">
        <properties.wasJms queueName="CacheQueue"/>
    </jmsQueue>

    <logging consoleLogLevel="INFO"/>
</server>
